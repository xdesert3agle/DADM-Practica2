<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.dadm.practica2">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:name=".Util.Initialize"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme_Light">
        <activity
            android:name=".Screens.TicketTabContainer"
            android:theme="@style/Theme_Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Screens.AddEditTicket"
            android:label="@string/TITLE_ADD_TICKET"
            android:theme="@style/Theme_Light.NoActionBar" />
        <activity
            android:name=".Screens.AddEditCategory"
            android:label="@string/TITLE_ADD_CATEGORY"
            android:theme="@style/Theme_Light.NoActionBar" />
        <activity
            android:name=".Screens.Categories"
            android:theme="@style/Theme_Light.NoActionBar" />
    </application>

</manifest>